# =============================================================================
# TelemetryFlow Go SDK - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values
# =============================================================================

# -----------------------------------------------------------------------------
# SDK VERSION
# -----------------------------------------------------------------------------
VERSION=1.1.0
GIT_COMMIT=
GIT_BRANCH=main
BUILD_TIME=

# -----------------------------------------------------------------------------
# DOCKER IMAGES
# -----------------------------------------------------------------------------
IMAGE_NAME=telemetryflow/telemetryflow-sdk
IMAGE_TAG=1.1.0

# Container names
CONTAINER_NAME=telemetryflow-sdk-gen
CONTAINER_NAME_RESTAPI=telemetryflow-sdk-restapi

# -----------------------------------------------------------------------------
# OPENTELEMETRY COLLECTOR
# -----------------------------------------------------------------------------
OTEL_VERSION=0.142.0

# Collector ports
OTLP_GRPC_PORT=4317
OTLP_HTTP_PORT=4318
OTEL_METRICS_PORT=8888
OTEL_HEALTH_PORT=13133

# -----------------------------------------------------------------------------
# JAEGER (Tracing)
# -----------------------------------------------------------------------------
JAEGER_UI_PORT=16686
JAEGER_HTTP_PORT=14268
JAEGER_GRPC_PORT=14250

# -----------------------------------------------------------------------------
# PROMETHEUS (Metrics)
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090

# -----------------------------------------------------------------------------
# GRAFANA (Dashboards)
# -----------------------------------------------------------------------------
GRAFANA_PORT=3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# -----------------------------------------------------------------------------
# TELEMETRYFLOW API (for SDK usage)
# -----------------------------------------------------------------------------
TELEMETRYFLOW_API_KEY_ID=tfk_your_key_id
TELEMETRYFLOW_API_KEY_SECRET=tfs_your_key_secret
TELEMETRYFLOW_ENDPOINT=localhost:4317
TELEMETRYFLOW_SERVICE_NAME=my-service
TELEMETRYFLOW_SERVICE_VERSION=1.1.0
TELEMETRYFLOW_INSECURE=true
